#!/usr/bin/env node

var liveEdit = require('../');
var path = require('path');

var file = path.join(
  process.cwd(),
  process.argv[2] 
);

var config = {};
try {
  config = require(file);
} catch (e) {
  config = {};
}

config.options = config.options || {};

var f = liveEdit(
  config.options.dir || process.cwd(),
  config.options,
  config.resolver
);

f.once('ready', config.ready || function() {});
